<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<record id="switch_user_request_view_tree" model="ir.ui.view">
    <field name="model">switch.user.request</field>
    <field name="arch" type="xml">
        <tree string="Switch User Request">
            <field name="from_user_id"/>
        </tree>
    </field>
</record>

<record id="switch_user_request_view_form" model="ir.ui.view">
    <field name="model">switch.user.request</field>
    <field name="arch" type="xml">
        <form string="Switch User Request">
            <header>
                <button name="switch" string="Switch" type="object"/>
            </header>
            <sheet>
                <group>
                    <field name="from_user_id"/>
                    <field name="to_user_id"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="switch_user_request_view_search" model="ir.ui.view">
    <field name="model">switch.user.request</field>
    <field name="arch" type="xml">
        <search string="Switch User Request">
            <field name="from_user_id"/>
        </search>
    </field>
</record>

<record model="ir.actions.act_window" id="act_open_switch_user_request_view">
    <field name="name">Switch User Request</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">switch.user.request</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="switch_user_request_view_search"/>
    <field name="domain">[]</field>
    <field name="context">{}</field>
</record>

<record model="ir.actions.act_window.view" id="act_open_switch_user_request_view_form">
    <field name="act_window_id" ref="act_open_switch_user_request_view"/>
    <field name="sequence" eval="20"/>
    <field name="view_mode">form</field>
    <field name="view_id" ref="switch_user_request_view_form"/>
</record>

<record model="ir.actions.act_window.view" id="act_open_switch_user_request_view_tree">
    <field name="act_window_id" ref="act_open_switch_user_request_view"/>
    <field name="sequence" eval="10"/>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="switch_user_request_view_tree"/>
</record>

<menuitem id="menu_switch_user_request"
    sequence="20"
    action="act_open_switch_user_request_view"/>

    </data>
</openerp>
